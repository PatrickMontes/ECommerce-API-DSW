@page "/dashboard"


@inject IDashboardService iDashboardService;

@using Microsoft.AspNetCore.Authorization;
@attribute [Authorize(Roles = "Administrador")];

<style>
    body{
        background: #262a2d;
    }
</style>
<div class="container mt-4" style="background: #262a2d;">
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card border-primary shadow" style="background: #262a2d;">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div>
                            <div class="text-xs text-primary text-uppercase" style="color:#fff; font-weight:900; font-size: 19px">Total Ingresos</div>
                            <div class="h5 mb-0 fw-bold" style="color:#fff">S/. @dashboardDTO.TotalIngreso</div>
                        </div>
                        <div class="ms-auto">
                            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-coin" viewBox="0 0 16 16" color="#fff">
                                <path d="M5.5 9.511c.076.954.83 1.697 2.182 1.785V12h.6v-.709c1.4-.098 2.218-.846 2.218-1.932 0-.987-.626-1.496-1.745-1.76l-.473-.112V5.57c.6.068.982.396 1.074.85h1.052c-.076-.919-.864-1.638-2.126-1.716V4h-.6v.719c-1.195.117-2.01.836-2.01 1.853 0 .9.606 1.472 1.613 1.707l.397.098v2.034c-.615-.093-1.022-.43-1.114-.9zm2.177-2.166c-.59-.137-.91-.416-.91-.836 0-.47.345-.822.915-.925v1.76h-.005zm.692 1.193c.717.166 1.048.435 1.048.91 0 .542-.412.914-1.135.982V8.518z" />
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                                <path d="M8 13.5a5.5 5.5 0 1 1 0-11 5.5 5.5 0 0 1 0 11m0 .5A6 6 0 1 0 8 2a6 6 0 0 0 0 12" />
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card border-success shadow" style="background: #262a2d;">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div>
                            <div class="text-xs text-success text-uppercase" style="color:#fff; font-weight:900; font-size: 19px">Total Ventas</div>
                            <div class="h5 mb-0 fw-bold" style="color:#fff">@dashboardDTO.TotalVentas</div>
                        </div>
                        <div class="ms-auto">
                            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-basket2-fill" viewBox="0 0 16 16" color="#fff">
                                <path d="M5.929 1.757a.5.5 0 1 0-.858-.514L2.217 6H.5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h.623l1.844 6.456A.75.75 0 0 0 3.69 15h8.622a.75.75 0 0 0 .722-.544L14.877 8h.623a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-1.717L10.93 1.243a.5.5 0 1 0-.858.514L12.617 6H3.383zM4 10a1 1 0 0 1 2 0v2a1 1 0 1 1-2 0zm3 0a1 1 0 0 1 2 0v2a1 1 0 1 1-2 0zm4-1a1 1 0 0 1 1 1v2a1 1 0 1 1-2 0v-2a1 1 0 0 1 1-1" />
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card border-warning shadow" style="background: #262a2d;">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div>
                            <div class="text-xs text-warning" style="color:#fff; font-weight:900; font-size: 19px">Total Clientes</div>
                            <div class="h5 mb-0 fw-bold" style="color:#fff">@dashboardDTO.TotalClientes</div>
                        </div>
                        <div class="ms-auto">
                            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16" color="#fff">
                                <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5.784 6A2.24 2.24 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.3 6.3 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1zM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5" />
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card border-info shadow" style="background: #262a2d;">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div>
                            <div class="text-xs text-info" style="color:#fff; font-weight:900; font-size: 19px">Total Productos</div>
                            <div class="h5 mb-0 fw-bold" style="color:#fff">@dashboardDTO.TotalProductos</div>
                        </div>
                        <div class="ms-auto">
                            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-box-seam" viewBox="0 0 16 16" color="#fff">
                                <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5.784 6A2.24 2.24 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.3 6.3 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1zM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5" />
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@code {
    private DashboardDTO dashboardDTO = new DashboardDTO();


    protected override async Task OnInitializedAsync()
    {
        var response = await iDashboardService.Resumen();

        if (response.Correcto)
        {
            dashboardDTO = (DashboardDTO)response.Resultado!;
        }
    }
}
